<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burak_background"
    android:orientation="vertical"
    tools:context="com.englishvocabularygame.evog.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/low_padding">

        <TextView
            style="@style/test_choices_textviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/test_summary"
            android:textColor="@color/burak_text_color"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cancel_mark_2"
            android:layout_width="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/burak_summary_color" />

    <android.support.design.widget.TabLayout
        android:id="@+id/summarytabs2"
        android:background="@color/burak_selection_background"
        android:layout_width="match_parent"
        app:tabGravity="fill"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/burak_summary_color"
        app:tabIndicatorHeight="4dp"
        app:tabSelectedTextColor="@color/burak_text_color"
        app:tabTextColor="@color/burak_text_color"  />
    <!--app:tabGravity="fill"-->
    <!--app:tabMaxWidth="0dp"-->
    <!--app:tabMode="fixed"-->
    <!--Burasi fragmentlarda yazilan yerler ile degistirilecek-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_summary"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>


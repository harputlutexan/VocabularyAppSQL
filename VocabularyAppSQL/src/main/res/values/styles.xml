<resources>

    <style name="numbers_style_achievements">
        <item name="android:layout_marginTop">@dimen/low_padding</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="statistics_top_text_style">
        <item name="android:textColor">@color/classic_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="achievements_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/award_icon</item>
    </style>

    <style name="achievements_check_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/check</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="statistics_bottom_text_style">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/classic_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="exit_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/burak_background</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/burak_summary_color</item>
        <item name="colorPrimaryDark">@color/burak_top_bar</item>
        <item name="android:editTextColor">#000000</item>
    </style>

    <style name="numbers_style">
        <item name="android:gravity">center|right</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/classic_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_page_textview_style">
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/classic_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_page_sub_textview_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activity_profile_text_style">
        <item name="android:textColor">@color/classic_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="summary_page_text_style">
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/classic_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="test_choices_textviews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/burak_summary_color</item>
    </style>

    <style name="overall_summary_text_style">
        <item name="android:textColor">@color/burak_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
